{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    //"outDir": ".build",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "rootDir": "./",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
